<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/prwti_dokimi_fontou_homescreen"
                android:orientation="vertical">

    <com.spark.submitbutton.SubmitButton
        android:background="@color/transparant"
        android:id="@+id/toHomePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ChatScreen"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:sub_btn_background="@color/whiteForAnimatedBTN"
        app:sub_btn_duration="100"
        app:sub_btn_line_color="@color/colorPrimaryForAnimatedBTN"
        app:sub_btn_ripple_color="@color/colorPrimaryForAnimatedBTN"
        app:sub_btn_tick_color="@color/yellow"
        tools:ignore="SmallSp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btnAllaghsOnomatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparant"
        android:text="@string/AllaghOnomatos"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:sub_btn_background="@color/whiteForAnimatedBTN"
        app:sub_btn_duration="100"
        app:sub_btn_line_color="@color/colorPrimaryForAnimatedBTN"
        app:sub_btn_ripple_color="@color/colorPrimaryForAnimatedBTN"
        app:sub_btn_tick_color="@color/yellow"
        tools:ignore="SmallSp"/>

</RelativeLayout>